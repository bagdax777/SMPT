<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#00ff0c" /> <!-- Zielony kolor tła -->
            <corners android:radius="20dp" /> <!-- Zagięcia na rogach -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00ff0c" /> <!-- Kolor tła przycisku -->
            <corners android:radius="20dp" /> <!-- Zagięcia na rogach -->
        </shape>
    </item>
</selector>